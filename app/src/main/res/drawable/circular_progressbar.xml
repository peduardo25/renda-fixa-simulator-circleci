<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1"
    android:fromDegrees="1080"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="0">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="14"
        android:useLevel="false">
        <size
            android:width="40dp"
            android:height="40dp"/>
        <gradient
            android:angle="0"
            android:endColor="@color/simulate_bt_color"
            android:startColor="@android:color/transparent"
            android:type="sweep"
            android:useLevel="false"
            />
    </shape>
</rotate>
